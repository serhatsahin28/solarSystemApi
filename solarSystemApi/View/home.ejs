<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>




    <div class="container2 ">


        <!-- As a link -->
        <nav class="navbar">
            <a class="navbar-brand" href="/">Anasayfa</a>
            <a class="navbar-brand" href="/planets">Gezegenler</a>
           
        </nav>
        
        
        <br><br>

        <% result.forEach(function(deger) { %>
            <div class="row justify-content-center">

                <div class="col-6  text-center">
                    <h1 class="custom-h1">Güneş Sistemi</h1>

                    <p>
                        <%= deger.title %>
                    </p>

                </div>
            </div>

            <br>
            <br>
            <div class="row justify-content-center">

                <div class="col-6 text-center ">
                    <h1 class="custom-h1">
                        Yapısı


                    </h1>

                    <p>
                        <%=deger.options%>
                    </p>
                </div>
            </div>
            <br>
            <br>
            <div class="row justify-content-center">

                <div class="col-6 text-center">
                    <h1 class="custom-h1">
                        Oluşumu


                    </h1>

                    <p>
                        <%=deger.creations%>
                    </p>
                </div>
            </div>

            <br>
            <br>
            <div class="row justify-content-center">

                <div class="col-6 text-center">
                    <h1 class="custom-h1">
                        Sistemdeki diğerler cisimler
                    </h1>

                    <p>
                        <%=deger.other%>

                    </p>
                </div>
            </div>

            <br>
            <br>
            <div class="row justify-content-center">

                <div class="col-6 text-center">
                    <h1 class="custom-h1">
                        Gezegenler
                    </h1>

                    <p>
                        <%=deger.planets%>
                    </p>
                </div>
            </div>

            <br>
            <br>
            <div class="row justify-content-center">

                <div class="col-6 text-center">
                    <h1 class="custom-h1">
                        Güneş sisteminin tahmini sonu
                    </h1>

                    <p>
                        <%=deger.destroy%>
                    </p>
                    <br><br>

                </div>
            </div>

            <% }); %>

    </div>



    </div>
    </div>


